<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.envite.greenbpm</groupId>
    <artifactId>CarbonReductorConnector</artifactId>
    <packaging>pom</packaging>
    <version>2.0.3-SNAPSHOT</version>

    <modules>
        <module>api</module>
        <module>carbon-reductor-core</module>
        <module>camunda-carbon-reductor-c8</module>
        <module>camunda-carbon-reductor-c7</module>
    </modules>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.7.4</version>
        <relativePath />
    </parent>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.scm.url>https://github.com/envite-consulting/camunda-carbon-reductor.git</project.scm.url>
        <!-- external libraries -->
        <version.assertj>3.23.1</version.assertj>
        <version.junit-jupiter>5.9.0</version.junit-jupiter>
        <version.mockito>4.7.0</version.mockito>
        <version.slf4j>1.7.36</version.slf4j>
        <version.gson>2.9.1</version.gson>
        <version.gson-extras>1.0.0</version.gson-extras>
        <version.lombok>1.18.24</version.lombok>
        <version.domainprimitives>0.1.0</version.domainprimitives>

        <version.swagger-core>2.0.0</version.swagger-core>
        <version.okhttp>2.7.5</version.okhttp>
        <version.gson>2.8.1</version.gson>
        <version.gson-fire>1.8.3</version.gson-fire>
        <version.threetenbp>1.3.5</version.threetenbp>
        <version.hibernate-validator>8.0.0.Final</version.hibernate-validator>
        <version.jakarta.validation-api>3.0.2</version.jakarta.validation-api>
        <version.zeebe.spring-boot>8.3.0</version.zeebe.spring-boot>
        <version.camunda.connector-core>0.11.4</version.camunda.connector-core>
        <version.camunda.spring-boot>7.19.0</version.camunda.spring-boot>
        <version.spring-boot>2.7.14</version.spring-boot>
        <version.org.jacoco>0.8.8</version.org.jacoco>
        <version.spring-banner-plugin>1.5.2</version.spring-banner-plugin>
        <version.maven-release-plugin>3.0.0</version.maven-release-plugin>
    </properties>

    <scm>
        <connection>scm:git:${project.scm.url}</connection>
        <developerConnection>scm:git:${project.scm.url}</developerConnection>
        <url>${project.scm.url}</url>
        <tag>HEAD</tag>
    </scm>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>${version.maven-release-plugin}</version>
                <configuration>
                    <tag>v${releaseVersion}</tag>
                    <scmReleaseCommitComment>Release v${releaseVersion}</scmReleaseCommitComment>
                    <scmDevelopmentCommitComment>prepare for next development iteration</scmDevelopmentCommitComment>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>