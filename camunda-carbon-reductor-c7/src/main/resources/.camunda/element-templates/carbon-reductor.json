{
  "$schema": "https://unpkg.com/@camunda/element-templates-json-schema/resources/schema.json",
  "name": "Carbon Reductor Connector",
  "id": "de.envite.greenbpm.carbonreductorconnector.CarbonReductor",
  "icon": {
    "contents": "data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'%3E%3Ctext y='.9em' font-size='90'%3E\uD83C\uDF31%3C/text%3E%3C/svg%3E"
  },
  "appliesTo": [
    "bpmn:ServiceTask"
  ],
  "groups": [
    {
      "id": "asynchronous-continuation",
      "label": "Asynchronous Continuation"
    },
    {
      "id": "carbonreductor",
      "label": "Carbon Reductor"
    },
    {
      "id": "outputMapping",
      "label": "Output Mapping"
    }
  ],
  "properties": [
    {
      "binding": {
        "name": "camunda:type",
        "type": "property"
      },
      "type": "Hidden",
      "value": "external"
    },
    {
      "binding": {
        "name": "camunda:topic",
        "type": "property"
      },
      "type": "Hidden",
      "value": "CarbonReductor"
    },
    {
      "label": "Before",
      "type": "Boolean",
      "value": true,
      "group": "asynchronous-continuation",
      "binding": {
        "type": "property",
        "name": "camunda:asyncBefore"
      }
    },
    {
      "label": "location",
      "id": "location",
      "description": "The location where the process is running",
      "group": "carbonreductor",
      "type": "Dropdown",
      "choices": [
        {
          "name": "Europe North",
          "value": "northeurope"
        },
        {
          "name": "Europe West",
          "value": "westeurope"
        },
        {
          "name": "France Central",
          "value": "francecentral"
        },
        {
          "name": "France South",
          "value": "francesouth"
        },
        {
          "name": "Germany North",
          "value": "germanynorth"
        },
        {
          "name": "Germany West Central",
          "value": "germanywestcentral"
        },
        {
          "name": "UK South",
          "value": "uksouth"
        },
        {
          "name": "UK West",
          "value": "ukwest"
        },
        {
          "name": "Switzerland North",
          "value": "switzerlandnorth"
        },
        {
          "name": "Switzerland West",
          "value": "switzerlandwest"
        },
        {
          "name": "Sweden Central",
          "value": "swedencentral"
        },
        {
          "name": "Norway East",
          "value": "norwayeast"
        },
        {
          "name": "West US",
          "value": "westus"
        }
      ],
      "binding": {
        "type": "camunda:inputParameter",
        "name": "location"
      }
    },
    {
      "label": "SLA based or absolute duration",
      "id": "carbonReductorMode",
      "description": "defines how to calculate the time window for the timeshift",
      "group": "carbonreductor",
      "type": "Dropdown",
      "choices": [
        {
          "name": "SLA based configuration",
          "value": "slaBasedConfiguration"
        }
      ],
      "binding": {
        "type": "camunda:inputParameter",
        "group": "carbonreductor",
        "name": "carbonReductorMode"
      }
    },
    {
      "label": "milestone",
      "id": "milestone",
      "description": "timestamp of the chosen milestone",
      "group": "carbonreductor",
      "value": "${now()}",
      "type": "String",
      "binding": {
        "type": "camunda:inputParameter",
        "name": "milestone"
      }
    },
    {
      "label": "duration of remaining process tasks",
      "id": "remainingProcessDuration",
      "description": "the duration of the remaining tasks after the Carbon Reductor as ISO 8601 duration",
      "group": "carbonreductor",
      "value": "PT6H",
      "type": "String",
      "feel": "optional",
      "binding": {
        "type": "camunda:inputParameter",
        "name": "RemainingProcessDuration"
      }
    },
    {
      "label": "maximum process duration from milestone to finish",
      "id": "maximumProcessDuration",
      "description": "the maximum duration the process is allowed to run as ISO 8601 duration",
      "group": "carbonreductor",
      "value": "PT12H",
      "type": "String",
      "binding": {
        "type": "camunda:inputParameter",
        "name": "maximumProcessDuration"
      }
    },
    {
      "label": "execution delayed?",
      "description": "has the execution been delayed?",
      "group": "outputMapping",
      "value": "executionDelayed",
      "type": "String",
      "binding": {
        "type": "camunda:outputParameter",
        "source": "${executionDelayed}"
      }
    },
    {
      "label": "amount of delay",
      "description": "amount of delay",
      "group": "outputMapping",
      "value": "delayedBy",
      "type": "String",
      "binding": {
        "type": "camunda:outputParameter",
        "source": "${delayedBy}"
      }
    },
    {
      "label": "original carbon",
      "description": "carbon emission in gCO2/kWh if the execution is not delayed",
      "group": "outputMapping",
      "value": "originalCarbon",
      "type": "String",
      "binding": {
        "type": "camunda:outputParameter",
        "source": "${originalCarbon}"
      }
    },
    {
      "label": "actual carbon",
      "description": "carbon emission in gCO2/kWh at the time of the delayed execution",
      "group": "outputMapping",
      "value": "actualCarbon",
      "type": "String",
      "binding": {
        "type": "camunda:outputParameter",
        "source": "${actualCarbon}"
      }
    },
    {
      "label": "saved carbon %",
      "description": "the percentage of saved carbon",
      "group": "outputMapping",
      "value": "savedCarbon",
      "type": "String",
      "binding": {
        "type": "camunda:outputParameter",
        "source": "${savedCarbon}"
      }
    },
    {
      "label": "reduced Carbon",
      "description": "the reduced carbon footprint in gCO2/kWh",
      "group": "outputMapping",
      "value": "reducedCarbon",
      "type": "String",
      "binding": {
        "type": "camunda:outputParameter",
        "source": "${reducedCarbon}"
      }
    }
  ]
}